model Transaction {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  deletedAt       DateTime?
  transactionDate DateTime  @default(now())
  type            String
  amount          Float
  description     String
}
